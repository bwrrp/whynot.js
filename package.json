{
	"name": "whynot",
	"version": "3.0.2",
	"description": "Generic VM-based structure matching framework",
	"author": "Stef Busking <stef.busking@gmail.com>",
	"contributors": [
		"Martin Middel <martinmiddel@gmail.com>"
	],
	"license": "MIT",
	"keywords": [
		"Language",
		"Matching",
		"Regex",
		"Structure"
	],
	"main": "dist/whynot.js",
	"module": "dist/whynot.mjs",
	"types": "dist/whynot.d.ts",
	"scripts": {
		"build": "npm-run-all build:tsc build:bundle build:api build:docs",
		"build:tsc": "rimraf dist && rimraf lib && tsc -P tsconfig.build.json",
		"build:bundle": "rollup -c",
		"build:api": "api-extractor run; copyfiles --flat temp/* api",
		"build:docs": "api-documenter markdown -i api -o docs",
		"prepare": "npm run build",
		"test": "jest --coverage --verbose"
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/bwrrp/whynot.js"
	},
	"devDependencies": {
		"@microsoft/api-documenter": "^7.5.3",
		"@microsoft/api-extractor": "^7.5.2",
		"@types/jest": "^24.0.19",
		"copyfiles": "^2.1.1",
		"jest": "^24.9.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2",
		"rimraf": "^3.0.0",
		"rollup": "^1.25.1",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"rollup-plugin-terser": "^5.1.2",
		"ts-jest": "~24.1.0",
		"typescript": "^3.6.4"
	},
	"jest": {
		"transform": {
			"^.+\\.(t|j)sx?$": "ts-jest"
		},
		"testRegex": "(\\.(tests))\\.(tsx?|jsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json",
			"jsx"
		],
		"collectCoverageFrom": [
			"src/**/*.ts"
		]
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true
	}
}
